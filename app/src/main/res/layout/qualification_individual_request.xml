<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="#FFFFE0">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textSize="20sp"
        android:id="@+id/user_name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/user_email"
        android:textSize="20sp"
        android:layout_below="@+id/user_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Board Name"
        android:textSize="20sp"
        android:id="@+id/hs_board_name"
        android:layout_below="@+id/user_email"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roll Number"
        android:textSize="20sp"
        android:id="@+id/hs_roll_number"
        android:layout_below="@+id/hs_board_name"/>

    <Button
        android:id="@+id/hs_not_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="7"
        android:textAllCaps="false"
        android:layout_below="@+id/hs_roll_number"
        android:text="No Record" />

    <Button
        android:id="@+id/hs_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="9"
        android:textAllCaps="false"
        android:layout_below="@+id/hs_roll_number"
        android:text="Verify Details" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Board Name"
        android:textSize="20sp"
        android:id="@+id/im_board_name"
        android:layout_below="@+id/hs_not_verify"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roll Number"
        android:textSize="20sp"
        android:id="@+id/im_roll_number"
        android:layout_below="@+id/im_board_name"/>

    <Button
        android:id="@+id/im_not_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="7"
        android:textAllCaps="false"
        android:layout_below="@+id/im_roll_number"
        android:text="No Record" />

    <Button
        android:id="@+id/im_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="9"
        android:textAllCaps="false"
        android:layout_below="@+id/im_roll_number"
        android:text="Verify Details" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Board Name"
        android:textSize="20sp"
        android:id="@+id/gr_board_name"
        android:layout_below="@+id/im_not_verify"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course"
        android:textSize="20sp"
        android:id="@+id/gr_course_name"
        android:layout_below="@+id/gr_board_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roll Number"
        android:textSize="20sp"
        android:id="@+id/gr_roll_number"
        android:layout_below="@+id/gr_course_name"/>

    <Button
        android:id="@+id/gr_not_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="7"
        android:textAllCaps="false"
        android:layout_below="@+id/gr_roll_number"
        android:text="No Record" />

    <Button
        android:id="@+id/gr_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="9"
        android:textAllCaps="false"
        android:layout_below="@+id/gr_roll_number"
        android:text="Verify Details" />

</RelativeLayout>
